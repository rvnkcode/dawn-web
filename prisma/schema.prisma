datasource db {
  provider = "sqlite"
  url      = "file:/memo/dawn.db"
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  isDone      Boolean   @default(false)
  createdAt   DateTime  @default(now())
  completedAt DateTime?
  // inbox 
  status      String    @default("inbox")
  archive     Boolean   @default(false)
  trash       Boolean   @default(false)
  urls        String?
  comments    String?
  who         Contact?  @relation(fields: [allocatedTo], references: [name])
  allocatedTo String?
}

model Contact {
  id   Int    @id @default(autoincrement())
  name String @unique

  Task Task[]

  @@map("Who")
}
